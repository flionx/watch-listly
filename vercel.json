{
  "version": 2,
  "builds": [
    {
      "src": "dist/client/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/tmdb.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/tmdb",
      "destination": "/api/tmdb.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/dist/client/index.html"
    }
  ]
}
